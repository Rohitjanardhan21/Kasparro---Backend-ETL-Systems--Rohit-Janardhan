# Database Configuration
DATABASE_URL=postgresql://postgres:password@db:5432/kasparro_etl

# API Keys (Optional - both APIs work without keys but with rate limits)
# CoinPaprika: Free tier has unlimited requests, Pro tier adds features
COINPAPRIKA_API_KEY=your_coinpaprika_api_key_here

# CoinGecko: Free tier has 10-50 calls/minute, Demo/Pro tiers have higher limits  
COINGECKO_API_KEY=your_coingecko_api_key_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# ETL Configuration
ETL_BATCH_SIZE=1000
ETL_RATE_LIMIT_REQUESTS=100
ETL_RATE_LIMIT_PERIOD=60
ETL_RETRY_ATTEMPTS=3
ETL_RETRY_DELAY=5

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Environment
ENVIRONMENT=development